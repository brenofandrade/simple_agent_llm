def send_question(query: str):
    url = "http://localhost:8000/chat"
    sid = str(uuid.uuid4())

    data = {
        "message": query,
        "session_id": sid,
    }

    response = requests.post(url, json=data, timeout=30)

    print("Status code:", response.status_code)
    print("Resposta bruta:", response.text)

    if response.status_code == 200:
        payload = response.json()
        # payload esperado:
        # {
        #   "question": "...",
        #   "classification": "...",
        #   "router_message": "...",
        #   "latency": ...
        # }
        return payload["classification"], payload["router_message"]

    else:
        # em caso de erro, só retorna None e loga
        try:
            print("Erro:", response.json())
        except Exception:
            print("Erro (não-JSON):", response.text)
        return None, None



